#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

### Configure environment

set -o errexit  # always exit on error
set -o pipefail # dont ignore exit codes when piping output
set -o nounset  # fail on unset variables
unset GIT_DIR   # Avoid GIT_DIR leak from previous build steps

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BUILDPACK_DIR=$(
  cd "$(dirname "${0:-}")" || exit
  cd ..
  pwd
)

cd "$BUILD_DIR"

### Load Dependencies
source "$BUILDPACK_DIR/lib/environment.sh"

### Install binaries needed for build
install_binaries() {
  echo "-> Cloning ASDF..."
  git clone https://github.com/asdf-vm/asdf.git $BUILD_DIR/.asdf --branch v0.9.0

  rm -rf $BUILD_DIR/node_modules/
  export ASDF_DIR=$BUILD_DIR/.asdf
  export ASDF_DATA_DIR=$BUILD_DIR/.asdf
  export PATH=$BUILD_DIR/.asdf/bin/:$ASDF_DIR/shims/:$PATH

  echo "-> Adding asdf-nodejs"
  asdf plugin add nodejs
  echo "-> Adding asdf-pnpm"
  asdf plugin add pnpm

  echo "-> Installing nodejs from tool versions"
  asdf install nodejs
  echo "-> Installing pnpm from tool versions"
  asdf install pnpm
}

install_binaries
write_profile "$BUILDPACK_DIR" "$BUILD_DIR"

echo "-> Run build"
pnpm build

echo "-> Linking pnpm with correct paths for slug"
pnpmver=`asdf current pnpm | awk '{print $2}'`
echo "PNPMver = $pnpmver"
cd $BUILD_DIR
mkdir -p $BUILD_DIR/.bin/
ln -s ".asdf/installs/pnpm/${pnpmver}/bin/pnpm.cjs" .bin/pnpm 

echo "-> Linking node with correct paths for slug"
nodever=`asdf current node | awk '{print $2}'`
echo "NODEver = $nodever"
cd $BUILD_DIR
ln -s ".asdf/installs/node/${nodever}/bin/node" .bin/node

